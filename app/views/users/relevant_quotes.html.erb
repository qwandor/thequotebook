<% content_for :title do %>: Quotes of interest to <%=h @user.fullname %><% end %>

<% content_for :head do %>
<%= auto_discovery_link_tag :atom, {:format => :atom}, {:title => "Quotes of interest to #{h(@user.fullname)}"} %>
<% end %>

<% content_for :header do %>
<h1>All quotes of interest to <%=h @user.fullname %></h1>
<% end %>

<% for quote in @quotes %>
<%= formatted_quote quote %>
<% end %>
