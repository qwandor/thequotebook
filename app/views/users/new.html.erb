<h1>Sign up as a new user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    OpenID<br />
    <%=h @user.openid %>
  </p>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :fullname %><br />
    <%= f.text_field :fullname %>
  </p>
  <p>
    <%= f.label :email_address %><br />
    <%= f.text_field :email_address %>
  </p>
  <p>
    <%= f.submit 'Sign up' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
