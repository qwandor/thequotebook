<h1><%=h @user.fullname %></h1>

<%= gravatar_for @user, :size => 60 %>

<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>OpenID:</b>
  <%= link_to h(@user.openid), h(@user.openid) %>
</p>

<h2>Quotes</h2>
<% for quote in @user.said_quotes %>
  <p>
    <%= formatted_quote quote, :quotee_link => false %>
  </p>
<% end %>

<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to h("All quotes by #{@user.fullname}"), quotes_user_path(@user) %> |
<%= link_to 'List users', users_path %>
