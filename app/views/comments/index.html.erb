<% content_for :title do %>: Comments for quote<% end %>

<% content_for :head do %>
<%= auto_discovery_link_tag :atom, {:format => :atom}, {:title => 'Comments'} %>
<% end %>

<% content_for :header do %>
<h1>Comments for <%= quote_marks_if_needed(@quote.quote_text).gsub(/[\r\n]+/, ' ').bbcode_to_html({}, :enable, true, false, [:bold, :italics]) %></h1>
<% end %>

<%= render :partial => 'list' %>

<br />

<%= link_to 'New comment', new_quote_comment_path(@quote) %>
<%= link_to 'Back to quote', @quote %>
