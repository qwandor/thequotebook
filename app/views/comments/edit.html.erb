<h1>Editing comment</h1>

<% form_for([@quote, @comment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', quote_comment_path(@quote, @comment) %> |
<%= link_to 'Back', quote_comments_path(@quote) %>
