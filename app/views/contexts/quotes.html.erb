<% content_for :head do %>
<%= auto_discovery_link_tag :atom, {:format => :atom}, {:title => "#{h(@context.name)} quotes"} %>
<% end %>

<% content_for :header do %>
<h1>All <%=h @context.name %> quotes</h1>
<% end %>

<% for quote in @quotes %>
<%= formatted_quote quote, :show_context => false %>
<% end %>

<p>
  <%= link_to h("Back to #{@context.name}"), @context %>
</p>
