<% content_for :title do %>: Log in<% end %>

<h1>Log in</h1>

<% form_tag session_path, :id => 'openid_form' do -%>
<p><%= label_tag 'openid' %><br/>
<%= text_field_tag 'openid', @openid %></p>

<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= submit_tag 'Log in', :disable_with => 'Logging in&hellip;' %></p>
<% end -%>
