<% form_for(@quote) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :quotee %><br />
    <%= text_field_tag :quotee, @quote.quotee && (@quote.quotee.username || @quote.quotee.fullname) %>
  </p>
  <p>
    <%= f.label :quote_text %><br />
    <%= f.text_area :quote_text %>
  </p>
  <p>
    <%= f.label :context %><br />
    <%= text_field_tag :context, @quote.context && @quote.context.name %><!-- TODO: use find-as-you-type, or at least combo box for contexts of which the user is a part -->
  </p>
  <p>
    <%= f.submit button_label %>
  </p>
<% end %>
